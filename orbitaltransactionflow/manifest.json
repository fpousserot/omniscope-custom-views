{
  "name": "orbitaltransactionflow",
  "frameworkVersion": "v1",
  "tags": [
    "custom",
    "transaction",
    "flow",
    "circle",
    "gooey",
    "orbit"
  ],
  "sandbox": false,
  "autoPane": true,
  "autoQuery": true,
  "dataLimit": 10000,
  "supportsSelection": true,
  "options": {
    "items": {
      "centreNodeId": {
        "displayName": "Centre Node Id",
        "detail": "Id of the node shown at the centre of the view",
        "type": "TEXT",
        "mandatory": true
      },
      "date": {
        "displayName": "Date",
        "detail": "Date of the transaction. Transactions with the same source and target that happen in the same minute will be shown as one",
        "type": "FIELD",
        "mandatory": true,
        "validFieldTypes": [
          "DATE"
        ]
      },
      "link": {
        "displayName": "Id",
        "detail": "Unique identifier of the transaction",
        "type": "FIELD",
        "mandatory": true,
        "validFieldTypes": [
          "TEXT"
        ]
      },
      "paneX": {
        "displayName": "Pane X",
        "type": "GROUPING",
        "list": true
      },
      "paneY": {
        "displayName": "Pane Y",
        "type": "GROUPING",
        "list": true
      },
      "size": {
        "displayName": "Value",
        "iconName": "visokio-option-icon:size-measure",
        "type": "MEASURE",
        "mandatory": true
      },
      "source": {
        "displayName": "Source",
        "detail": "Identifier of the source sending the transaction",
        "type": "MEASURE",
        "mandatory": true
      },
      "target": {
        "displayName": "Target",
        "detail": "Identifier of the target where the transaction is sent to",
        "type": "MEASURE",
        "mandatory": true
      }
    },
    "structure": {
      "toolbar": [
        "link",
        "date",
        "size"
      ],
      "x": [
        "paneX"
      ],
      "y": [
        "paneY"
      ]
    },
    "optionGroups": [
      {
        "displayName": "Chart",
        "rows": [{
          "cells": [{
            "option": "centreNodeId",
            "usePrefixTitle": false
          }]
        }]
      },{
        "displayName": "Transaction",
        "rows": [
          {
            "cells": [
              {
                "option": "link",
                "usePrefixTitle": false
              },
              {
                "option": "source",
                "usePrefixTitle": false
              },
              {
                "option": "target",
                "usePrefixTitle": false
              },
              {
                "option": "date",
                "usePrefixTitle": false
              },
              {
                "option": "size",
                "usePrefixTitle": false
              }
            ]
          }
        ]
      },{
        "displayName": "Pane/tile",
        "rows": [{
          "cells": [{
            "option": "paneX",
            "usePrefixTitle": false
          }]
        }, {
          "cells": [{
            "option": "paneY",
            "usePrefixTitle": false
          }]
        }]
      }]
  },
  "defaultOptions": {
    "items": {},
    "pane": {
      "yAxisHeaderWidth": 75,
      "paneWidth": 200,
      "paneHeight": 200,
      "gridLineThickness": 1,
      "gridLineColour": "rgba(229,229,229,1)",
      "headerStyle": {
        "size": 12,
        "colour": "#333333",
        "backgroundColour": "#FFFFFF"
      },
      "tileHeaderAlignment": "CENTER",
      "xHeaderPlacement": "TOP",
      "yHeaderPlacement": "LEFT",
      "showColourKeyInEveryPane": false,
      "enableTouchScrolling": false
    }
  },
  "pane": {
    "minWidth": 50,
    "minHeight": 50
  }
}
