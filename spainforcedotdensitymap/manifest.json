{
  "name": "Spain Force Dot Density Map",
  "frameworkVersion": "v1",
  "icon": "icon.svg",
  "thumbnail": "thumbnail.png",
  "tags": [
    "custom",
    "map",
    "dot",
    "density",
    "force",
    "jitter",
    "spain"
  ],
  "sandbox": false,
  "autoPane": true,
  "autoQuery": true,
  "dataLimit": 10000,
  "supportsSelection": true,
  "options": {
    "items": {
      "lat": {
        "displayName": "Latitude",
        "type": "MEASURE",
        "mandatory": true,
        "validFieldTypes": [
          "NUMBER"
        ]
      },
      "lon": {
        "displayName": "Longitude",
        "type": "MEASURE",
        "mandatory": true,
        "validFieldTypes": [
          "NUMBER"
        ]
      },
      "paneX": {
        "displayName": "Pane X",
        "type": "GROUPING",
        "list": true
      },
      "paneY": {
        "displayName": "Pane Y",
        "type": "GROUPING",
        "list": true
      },
      "split": {
        "displayName": "Split",
        "type": "GROUPING",
        "mandatory": true
      },
      "tooltiptitle": {
        "displayName": "Tooltip title",
        "detail": "If not specified, the field name of the tooltip value will be used",
        "type": "TEXT"
      },
      "tooltipvalue": {
        "displayName": "Tooltip value",
        "type": "MEASURE"
      }
    },
    "structure": {
      "toolbar": [],
      "x": [
        "lon",
        "paneX"
      ],
      "y": [
        "lat",
        "paneY"
      ]
    },
    "optionGroups": [{
      "displayName": "Chart",
      "rows": [{
        "cells": [{
          "option": "split",
          "usePrefixTitle": false
        }, {
          "option": "lat",
          "usePrefixTitle": false
        }, {
          "option": "lon",
          "usePrefixTitle": false
        }]
      }]
    },
      {
        "displayName": "Marker",
        "rows": [
          {
            "title": "Tooltip",
            "cells": []
          },
          {
            "cells": [
              {
                "option": "tooltiptitle",
                "usePrefixTitle": false
              },
              {
                "option": "tooltipvalue",
                "usePrefixTitle": false
              }
            ]
          }
        ]
      }, {
      "displayName": "Pane/tile",
      "rows": [{
        "cells": [{
          "option": "paneX",
          "usePrefixTitle": false
        }]
      }, {
        "cells": [{
          "option": "paneY",
          "usePrefixTitle": false
        }]
      }]
    }]
  },
  "defaultOptions": {
    "items": {},
    "pane": {
      "yAxisHeaderWidth": 75,
      "paneWidth": 100,
      "paneHeight": 100,
      "gridLineThickness": 1,
      "headerStyle": {},
      "tileHeaderAlignment": "CENTER",
      "xHeaderPlacement": "TOP",
      "yHeaderPlacement": "LEFT",
      "showColourKeyInEveryPane": false,
      "enableTouchScrolling": false
    }
  },
  "pane": {
    "minWidth": 50,
    "minHeight": 50,
    "maxCells": 20
  }
}