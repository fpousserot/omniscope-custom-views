{
  "name": "KPI (custom views demo)",
  "frameworkVersion": "v1",
  "icon": "icon.svg",
  "tags": ["custom", "key"],
  "thumbnail": "thumbnail.png",
  "sandbox": false,
  "autoPane": true,
  "autoQuery": true,
  "dataLimit": 10000,
  "supportsSelection": true,
  "options": {
    "items": {
      "measure": {
        "displayName": "Measure",
        "type": "MEASURE",
        "mandatory": true,
        "detail": "Measure value to show under the text"
      },
      "text": {
        "displayName": "Text",
        "type": "TEXT",
        "detail": "Static text to show as title"
      }
    },
    "structure": {
      "toolbar": [
        "measure"
      ],
      "x": [],
      "y": []
    },
    "optionGroups": [{
      "displayName": "Measures",
      "rows": [{
        "cells": [{
          "option": "text",
          "usePrefixTitle": false
        }]
      }, {
        "cells": [{
          "option": "measure",
          "usePrefixTitle": false
        }]
      }]
    }]
  },
  "defaultOptions": {
    "items": {},
    "pane": {
      "yAxisHeaderWidth": 75,
      "paneWidth": 100,
      "paneHeight": 100,
      "gridLineThickness": 1,
      "headerStyle": {},
      "tileHeaderAlignment": "CENTER",
      "xHeaderPlacement": "TOP",
      "yHeaderPlacement": "LEFT",
      "showColourKeyInEveryPane": false
    }
  },
  "pane": {
    "minWidth": 50,
    "minHeight": 50,
    "maxCells": 20
  }
}
